<?xml version="1.0" encoding="utf-8"?>
<layout >
    <data>

        <import type="com.odoo.common.UtilsKt" />

        <variable
            name="customerResponse"
            type="com.odoo.customers.entities.CustomerResponse" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageSmall"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:image_small="@{UtilsKt.trimFalse(customerResponse.imageSmall)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:name="@{UtilsKt.trimFalse(customerResponse.name)}"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{UtilsKt.trimFalse(customerResponse.name)}"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            app:layout_constraintBottom_toTopOf="@+id/email"
            app:layout_constraintStart_toEndOf="@+id/imageSmall"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Aliasgar Vadivala" />

        <TextView
            android:id="@+id/company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="@{UtilsKt.trimFalse(customerResponse.companyName)}"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintBottom_toBottomOf="@+id/name"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="YourCompany" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_8dp"
            android:paddingEnd="56dp"
            android:paddingStart="0dp"
            android:singleLine="true"
            android:text="@{UtilsKt.trimFalse(customerResponse.email)}"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintStart_toEndOf="@+id/imageSmall"
            app:layout_constraintTop_toBottomOf="@+id/name"
            tools:text="charlie.barnard@wealthyandsons.example.com" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
